<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimpleSearchFragment"
    android:padding="5dp">

    <android.support.constraint.ConstraintLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:background="@drawable/border"
            android:padding="8dp"
            android:text="Derevi"
            android:ems="10"
            android:textColor="#fefefe"
            android:id="@+id/simpleSearchEditText"
            app:layout_constraintBottom_toTopOf="@+id/simpleSearchProgressBar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/simpleSearchProgressBar"
            app:layout_constraintBottom_toTopOf="@+id/simpleSearchButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <Button
            android:text="Search"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/simpleSearchButton"
            android:background="@drawable/border_button"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <android.support.constraint.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/guideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.50"
            />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
